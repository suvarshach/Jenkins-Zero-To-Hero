pipeline{
    agent{
        any
    }

    stages{
        stage(Checkout){
            steps{
              git branch: 'main', url: 'https://github.com/suvarshach/Jenkins-Zero-To-Hero.git'
            }
       	 }
	 stage(build){
            steps{
                 sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
            }
	}
	stage(dockerbuild){
            steps{
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t image:varsha .'
            }
        }
        stage(push){
            steps{
                sh 'docker tag image: var suvarsha/helm2k8s:indiaeatz'
                sh 'docker push suvarsha/helm2k8s:indiaeatz'
            }
        }
	stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
            GIT_USER_NAME = "suvarsha"
        	}
         
         }
       }
    }
}
