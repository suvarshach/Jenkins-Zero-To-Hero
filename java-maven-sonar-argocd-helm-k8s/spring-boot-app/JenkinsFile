pipeline{
    agent{
        label 'docker-new node'
    }

    stages{
        stage(Checkout){
            steps{
              git branch: 'main', url: 'https://github.com/suvarshach/Jenkins-Zero-To-Hero.git'
            }
       	 }
	 stage(build){
            steps{
                 sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
            }
	}
	stage(dockerbuild){
            steps{
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t image:varsha .'
            }
        }
        stage(push){
            steps{
                sh 'docker tag image: var suvarsha/helm2k8s:indiaeatz'
                sh 'docker push suvarsha/helm2k8s:indiaeatz'
            }
        }
	stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
            GIT_USER_NAME = "suvarsha"
        	}
         steps {
            withCredentials([string(credentialsId: 'suvarsha', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "chsuvarsha@gmail.com"
                    git config user.name "suvarsha"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/replicas: 5/replicas: 2/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                    git add . java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
         }
       }
    }
}
